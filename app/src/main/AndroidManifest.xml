<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.takeawaydemo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.JustTakeAwayDemo">
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.JustTakeAwayDemo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.view.MainActivity"/>

        <activity android:name=".ui.view.RestaurantDetailActivity"
            />
    </application>

</manifest>